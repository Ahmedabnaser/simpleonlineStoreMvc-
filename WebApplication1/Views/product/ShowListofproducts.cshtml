@foreach (Product item in Model)
{
    <div class="card" style="width:400px">
        <div class="card-body">
            <h4 class="card-title">@item.name</h4>
            <p class="card-text">@item.description - @item.price</p>
            <a href="#" class="btn btn-primary">See Profile</a>
        </div>
        <img class="card-img-bottom" src="/images/@item.Image" alt="Card image" style="width:100%">

    </div>
}




